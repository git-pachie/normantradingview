@model WebApplication1.Models.Chart

<!-- TradingView Widget BEGIN -->
<div class="tradingview-widget-container">
    <div id="tradingview_e25ff"></div>
    <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/@Model.Market-@Model.Symbol/" rel="noopener" target="_blank"><span class="blue-text">@Model.Symbol Chart</span></a> by TradingView</div>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
    <script type="text/javascript">
        new TradingView.widget(
            {
                "autosize": true,
                "symbol": "@Model.MarketSymbol",
                "interval": "D",
                "timezone": "Etc/UTC",
                "theme": "light",
                "style": "1",
                "locale": "en",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "withdateranges": true,
                "hide_side_toolbar": false,
                "allow_symbol_change": true,
                "container_id": "tradingview_e25ff"
            }
        );
    </script>
</div>
<!-- TradingView Widget END -->